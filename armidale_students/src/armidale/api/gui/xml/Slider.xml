<ArmidaleClass name="armidale.api.gui.Slider"
               extends="armidale.api.gui.Widget"
               abstract="no"
> 
  <attribute name="minimum"
             type="int"
             default="0"
  />
  
  <attribute name="maximum"
             type="int"
             default="100"
  />
  
  <attribute name="value"
             type="int"
             default="50"
  />
  
  <attribute name="orientation"
             type="int"
             constants="armidale.api.gui.constants.Orientation"
             default="HORIZONTAL"
  />
  

  <attribute name="majorTickSpacing"
             type="int"
             default="10"
  />
  
  <attribute name="minorTickSpacing"
             type="int"
             default="2"
  />

  <attribute name="ticksVisible"
             type="boolean"
             getName="ticksVisible"
             default="true"
  />
  
  <attribute name="labelsVisible"
             type="boolean"
             getName="labelsVisible"
             default="true"
  />
  
  <attribute name="snapToTicks"
             type="boolean"
             getName="snapToTicks"
             default="false"
  />
  
  <method name="addLabel">
    <parameter name="value"
               type="int"
    />
    <parameter name="label"
               type="String"
    />
  </method>
  
  <method name="useIntegerLabels">
    <parameter name="spacing"
               type="int"
    />
  </method>

  <include filename="AdjustmentCallback.xml"/>
   
</ArmidaleClass>
